<config>
    <bean id="bmw" class="framework.test_beans.Bmw" scope="singleton" lazy-init="false">
        <properties>
            <property name="coupe" value="true"/>
        </properties>
        <constructor>
            <arg value="320"/>
            <arg value="black"/>
        </constructor>
    </bean>

    <bean id="mercedes" class="framework.test_beans.Mercedes" scope="prototype" lazy-init="false">
        <properties>
            <property name="coupe" value="false"/>
        </properties>
        <constructor>
            <arg value="280"/>
            <arg value="green"/>
        </constructor>
    </bean>

    <bean id="carOwner" class="framework.test_beans.CarOwner">
    </bean>
</config>
